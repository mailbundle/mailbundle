#!/usr/bin/env bash

confd=$(readlink -f $(dirname $0)/..)
FIFO_PATH="${confd}/each.fifo"

[ "$(jq -r '.use_offlineimap' ${confd}/mailbundle.json)" = "true" ] && exit 0

if ! [ -p $FIFO_PATH ]; then
    mkfifo $FIFO_PATH
fi

while true; do
    mail_header=$(cat $FIFO_PATH)
    echo "[$(date)] New mail"
    for script in "${confd}/hooks/on-new-mail/*"; do
        $script $mail_header
    done
done

# vim: set ft=sh:
